{
	"preload": "preload.js",
	"logo": "logo.png",
	"features": [
		{
			"code": "letpub",
			"explain": "查看期刊分区号",
			"cmds": [
				"thesis",
				"letpub"
			]
		},
		{
			"code": "pdf_replace",
			"explain": "替换pdf的换行",
			"cmds": [
				{
					"type": "regex",
					"label": "替换pdf换行",
					"match": "/.*\\r\\n.*/i",
					"minLength": 20
				}
			]
		},
		{
			"code": "unknown_cite",
			"explain": "解析引用",
			"cmds": [
				{
					"type": "over",
					"label": "未知引用",
					"minLength": 10
			}
			]
		},
		{
			"code": "gbt_cite",
			"explain": "正则匹配有可能不准确。",
			"cmds": [
				{
					"type": "regex",
					"label": "解析GB/T 7714引用",
					"match": "/^(.*?)\\.\\s*(.*?)\\[(.{1,2})\\]\\s*?[\\.\\/]\\/?\\s*((.*?),\\s*(\\d{4}).*)$/i"
				}
			]
		},
		{
			"code": "apa_cite",
			"explain": "正则匹配有可能不准确。",
			"cmds": [
				{
					"type": "regex",
					"label": "解析APA引用",
					"match": "/^(.*?)\\.\\s*[“\"](.*?)[\"”]\\s*(.*?(([\\,\\.]\\s*\\d{4})|(\\(\\d{4}\\))).*?)$/i"
				}
			]
		},
		{
			"code": "mla_cite",
			"explain": "正则匹配有可能不准确。",
			"cmds": [
				{
					"type": "regex",
					"label": "解析MLA引用",
					"match": "/^(.*)\\.\\s*\\((\\d{4})(,\\s*\\w+)?\\)\\.\\s*(.*?)\\.\\s*(.*)$/i"
				}
			]
		}
	]
}
